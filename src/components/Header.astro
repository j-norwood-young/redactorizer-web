---
interface Props {
  current?: 'home' | 'docs' | 'contact';
}
const { current } = Astro.props;
const nav = [
  { href: '/', label: 'Home', slug: 'home' as const },
  { href: '/docs/', label: 'Docs', slug: 'docs' as const },
  { href: '/contact/', label: 'Contact', slug: 'contact' as const },
];
---

<header class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur supports-[backdrop-filter]:bg-surface/80">
  <div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-4 sm:px-6">
    <a
      href="/"
      class="font-display text-xl font-bold tracking-tight text-fg transition-colors hover:text-accent"
    >
      Redactorizer
    </a>
    <nav aria-label="Main" class="flex items-center gap-1">
      <ul class="flex items-center gap-6 sm:gap-8">
        {nav.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'text-sm font-medium transition-colors',
                current === item.slug
                  ? 'text-fg'
                  : 'text-fg-muted hover:text-fg',
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
